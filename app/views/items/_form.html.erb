<%= form_for [user, item], remote: true do |f| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(item.errors.count, "error") %>.</h4>
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(user.errors[:name]) do %>
    <%= f.label :add_item %>
    <%= f.text_area :name, rows: 1, class: 'form-control', placeholder: "Enter a to-do item" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Add Item", class: 'btn btn-success' %>
  </div>
<% end %>